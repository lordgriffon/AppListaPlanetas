<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeListaPlanetas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <ImageView
            android:id="@+id/imgListaCapa"
            android:layout_width="150dp"
            android:layout_height="150dp"

            android:src="@drawable/olhodomundo" />

        <LinearLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_marginLeft="140dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtListaTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:text="Olho do Mundo"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtListaCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fantasia"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txtListaAutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Robert Jordan"
                android:textSize="20sp"/>


            <RatingBar
                android:id="@+id/ratListaPontuacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:rating="2.5" />


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>